{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
<header class="site-header outer {{#if @blog.cover_image}}" style="background-image: url({{@site.cover_image}}){{else}}no-cover{{/if}}">
{{> "site-nav"}}
    <div class="inner">
        <div class="site-header-content">
            <h1 class="site-title">
                {{#if @blog.logo}}
                    {{!-- <img class="site-logo" src="{{@site.logo}}" alt="{{@site.title}}" /> --}}
                    {{!-- <img class="site-logo" src="assets/bare-title.svg" alt="{{@site.title}}" /> --}}
                {{else}}
                    {{@site.title}}
                {{/if}}
            </h1>
            <h2 class="site-description">{{@site.description}}</h2>
            <h3 class="site-subdescription">Helping brands find love and bloggers make money.</h3>
            <button class="button-default">Sign up early</button>
        </div>
        
    </div>
</header>

{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
    <div class="inner">

        <div class="section-one">
            <div class="wordpress-plugin-background">
                <img  class="wordpress-plugin-mockup" src="assets/landing-page-background-one.png"/>
            </div>
        </div>

        <p class="endorsement">Built with influencers.</br>Endorsed by brands.</p>

        <div class="section-two">
            <div class="ad-in-website-info">
                <h2>Weâ€™re making ads look good next to influential content.</h2>
                <h3>Pretty as a Polaroid.</h3>
                <h3>Relevant to your audience.</h3>
                <h3>$uper clickable.</h3>
            </div>
            <img  class="ad-in-website-mockup" src="assets/missmoorestyle-with-ad.png"/>
        </div>

        


        <div class="post-feed">
            {{#foreach posts}}

                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{> "post-card"}}

            {{/foreach}}
        </div>

    </div>
</main>
